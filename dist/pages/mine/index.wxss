  background-size: 100%;
  background-position: bottom center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-info {
  flex: 0.5;
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.header-info .header-info-name {
  font-size: 50rpx;
  color: #fff;
  font-weight: 400;
}
.header-info .header-info-sub {
  margin-top: 5px;
  font-size: 30rpx;
  color: #fff;
  font-weight: 300;
}
.header-avatar {
  flex: 0.3;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-arrow {
  flex: 0.2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-arrow image {
  width: 30px;
}
.header-avatar image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.login-btn {
  width: 200px;
  height: 44px;
  color: #fff;
  background: #333;
  font-size: 30rpx;
  line-height: 47px;
  border: 0;
  border-radius: 5px;
}
.login-btn ::after {
  border: 0;
}
.function-view {
  display: flex;
  flex-direction: row;
}
.function-item {
  flex: 1;
  position: relative;
  padding: 8px;
}
.function-item:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-right-width: 1px;
  border-bottom-width: 1px;
}
.function-item image {
  width: 25px;
  height: 25px;
  margin: auto;
}
.function-item .function-text {
  margin-top: 8px;
  font-size: 20rpx;
  color: #515151;
  text-align: center;
}
.function-item:last-child {
  position: relative;
}
.function-item:last-child:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #ccc solid;
  box-sizing: border-box;
