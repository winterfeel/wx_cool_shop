.header {
  width: 100%;
  height: 140px;
  background-color: #fff;
  background-image: url(http://yanxuan.nosdn.127.net/d069279e5834bbca17065a9855a014bf.png);
  background-size: 100%;
  background-position: bottom center;
  display: flex;
