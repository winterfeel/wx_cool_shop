<template>
  <view class="ui-divider">
    <view class="holder">
      <view class="line" style="{{ lineStyle }}"></view>
    </view>
    <view class="ui-divider-content" style="{{ contentStyle }}">
      <slot></slot>
    </view>
    <view class="holder">
      <view class="line" style="{{ lineStyle }}"></view>
    </view>
  </view>
</template>

<script>
import StyleHelper from '../../libs/StyleHelper'

export default {
  config: {
    usingComponents: {}
  },
  behaviors: [],
  properties: {
    color: {
      type: String
    },
    padding: {
      type: String | Number
    }
  },
  data: {},
  ready () {
    this.setData({
      lineStyle: StyleHelper.getPlainStyle({
        backgroundColor: this.data.color
      }),
      contentStyle: StyleHelper.getPlainStyle({
        paddingLeft: this.data.padding,
        paddingRight: this.data.padding
      })
    })
  },
  methods: {}
};
</script>

<style lang="less">
.ui-divider {
  display: table;
  white-space: nowrap;
  height: auto;
  overflow: hidden;
  line-height: 1;
  text-align: center;
  padding: 10px 0;
  color: #999;

  .ui-divider-content {
    padding: 0 5px;
  }

  .holder {
    content: "";
    display: table-cell;
    position: relative;
    transform: translateY(50%);
    width: 50%;

    .line {
      position: absolute;
      top: 0;
      left: 0;
      background: #ccc;
      width: 100%;
      height: 1px;
      transform: scaleY(0.33);
      transform-origin: 0 0;
    }
  }
}
</style>
